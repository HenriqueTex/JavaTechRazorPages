@page
@model JavaTechPages.Pages.ShippingProducts.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>ShippingProduct</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShippingProduct.Id" />
            <div class="form-group">
                <label asp-for="ShippingProduct.Quantity" class="control-label"></label>
                <input asp-for="ShippingProduct.Quantity" class="form-control" />
                <span asp-validation-for="ShippingProduct.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippingProduct.ShippingId" class="control-label"></label>
                <select asp-for="ShippingProduct.ShippingId" class="form-control" asp-items="ViewBag.ShippingId"></select>
                <span asp-validation-for="ShippingProduct.ShippingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippingProduct.ProductId" class="control-label"></label>
                <select asp-for="ShippingProduct.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="ShippingProduct.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
