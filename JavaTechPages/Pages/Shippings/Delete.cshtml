    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Shipping</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shipping.dateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shipping.dateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shipping.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shipping.UserName)
        </dd>
        <dt class="col-sm-2">
