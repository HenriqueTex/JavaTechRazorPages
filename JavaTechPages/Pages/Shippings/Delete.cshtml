@page
@model JavaTechPages.Pages.Shippings.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@if (TempData["Error"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.error('@TempData["Error"]');    
    </script>
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Shipping</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shipping.dateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shipping.dateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shipping.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shipping.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shipping.Finished)
        </dt>
        
         @if(Model.Shipping.Finished==true)
                {
                <dd class='col-sm-2'>
                    Closed
                </dd>
                }
                else
                {
                <dd class='col-sm-2'>
                    Open
                </dd>
                }
    </dl>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
     <table class="table" table-striped table-dark>
        <thead class="thead-dark">
            <tr>
                <th>Product</th>
                <th>Quantity</th>
            </tr>
        </thead>
        @foreach (var item in Model.ShippingProducts)
        {
            <tr>
                <th>@item.Product.Name</th>
                <th>@item.Quantity</th>
            </tr>
        }
        </table>
    
    <form method="post">
        <input type="hidden" asp-for="Shipping.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
